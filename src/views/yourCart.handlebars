<h1>Your Cart</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <p>Title: {{this.product.title}}</p>
        <p>Description: {{this.product.description}}</p>
        <p>Price: {{this.product.price}}</p>
        <p>Quantity: {{this.quantity}}</p>
      </li>
    {{/each}}
  </ul>
  <form id="purchaseForm" action="/api/carts/{{cart._id}}/purchase" method="POST">
    <button type="submit" id="buyButton" class="buy-button">Buy</button>
  </form>
{{else}}
  <p>Your cart is empty.</p>
{{/if}}

<div>
  <a href="/products" class="continue-shopping-button">Continue Shopping</a>
</div>

<script src="/js/buyCart.js"></script>